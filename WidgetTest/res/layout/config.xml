<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" android:padding="10dip">

    <CheckBox
        android:id="@+id/cb_graded_fontsize"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:checked="true"
        android:text="@string/show_graded_fontsize" />

    <CheckBox
        android:id="@+id/cb_show_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/show_background" 
        android:checked="true"/>

    <CheckBox
        android:id="@+id/cb_relative_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_relative_date" android:checked="true"/>

    <CheckBox
        android:id="@+id/cb_show_age"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/show_age" android:checked="true"/>

    <Button
        android:id="@+id/save_button"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@android:string/ok" android:layout_marginTop="10dip"/>
    
    
    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Groups" />
    

</LinearLayout>